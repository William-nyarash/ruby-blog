<%= form_with model: blog_post do |form| %>
  <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="flex flex-row gap-1 items-center justify-center mb-1">
    <%= form.label :title %>
    <%= form.text_field :title , class: "block min-w-0 focus:outline-none text-gray-900 text-base pl-1 pr-3 grow   border-b-3 border-amber-300 rounded-lg border-b-amber-400  " %>
  </div>

  <div  class="flex flex-row gap-1 items-center justify-center mb-3 pt-3">
    <%= form.label :body %>
    <%= form.text_area :body , class: "block min-w-0 focus:outline-none text-gray-900 text-base pl-1 pr-3 grow  border-b-3 border-amber-300 rounded-lg border-b-amber-400  "%>
  </div>

  <%= form.button  class: "bg-gray-100 hover:bg-gray-200 p-2 rounded mt-2 uppercase font-bold hover:shadow w-3/5" %>
<% end %>